<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgcolor"
    tools:context=".activities.ImageViewerActivity4">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imagelefttop"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/imagerightbottom"/>



    <TextView
        android:id="@+id/txt3dmodel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dmodel"
        app:fontPath="fonts/HindVadodara-Bold.ttf"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_22sdp"
        android:textColor="@color/yellowtext" />



    <ImageView
        android:layout_below="@id/txt3dmodel"
        android:layout_above="@id/btm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/person"/>

    <RelativeLayout
        android:id="@+id/btm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        android:layout_alignParentBottom="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/camerabtn"
            />


        <TextView
            android:id="@+id/txtComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete"
            android:textColor="@color/white"
            app:fontPath="fonts/HindVadodara-Bold.ttf"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:layout_centerInParent="true"
            />



    </RelativeLayout>




</RelativeLayout>